#include<stdio.h>
//3n+1 pratice 
int main() {
	int input1,input2,start,end,count,max,i;

	printf("input two numbers\n");
	scanf("%d%d",&input1,&input2);
	if(input1>input2) {
		start=input2;
		end=input1;
	} else {
		start=input1;
		end=input2;
	}
	max=0;
	for(int n=start; n<=end; n++) {
		i=n;
		count=1;
		while(i!=1) {
			if(i%2!=0) {
				i=i*3+1;
				//count++;
			} else {
				i/=2;
				//count++;
			}
			count++;
		}
		if(count>max) {
			max=count;
		}
	}
	printf("最大數循環次數：%d",max);
	return 0;
}

